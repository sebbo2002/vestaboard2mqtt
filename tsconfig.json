{
    "compilerOptions": {
        "declaration": true,
        "esModuleInterop": true,
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "outDir": "./dist",
        "skipLibCheck": true,
        "sourceMap": true,
        "target": "es6"
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
    "include": [
        "src/**/*"
    ],
    "ts-node": {
        "esm": true,
        "transpileOnly": true,
        "files": true,
        "experimentalResolver": true
    }
}
