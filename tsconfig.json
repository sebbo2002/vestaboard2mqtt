{
    "compilerOptions": {
        "declaration": true,
        "esModuleInterop": true,
        "module": "es2020",
        "moduleResolution": "node16",
        "outDir": "./dist",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "es6"
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
    "include": [
        "src/**/*"
    ]
}
